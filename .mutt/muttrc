# switch to default account on startup
source ~/.mutt/accounts/jobb

# change account
macro index <f1> '<sync-mailbox><enter-command>source ~/.mutt/accounts/jobb<enter><change-folder>!<enter>'
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/accounts/privat<enter><change-folder>!<enter>'

# refreshing mailbox
 set imap_idle = yes
 unset imap_passive
 set mail_check = 10
 set imap_keepalive = 300
 set imap_check_subscribed
 set mail_check = 60
 set sleep_time = 0
 set timeout = 10
 set net_inc = 5
 set abort_nosubject = yes
 set edit_headers = yes

# custom theme
 source "~/.mutt/comida.mutt"

# gpg config
 source "~/.mutt/gpg.rc"
 set pgp_use_gpg_agent = yes
 set pgp_sign_as = 0x733893F1
 set pgp_timeout = 3600
 set crypt_autosign = no
 set crypt_replyencrypt = no
 set crypt_replysign
 set crypt_replysignencrypted
 set pgp_show_unusable = no

# manually refresh inbox
 bind index G imap-fetch-mail

# misc config
 set pager_context = 2
 set pager_index_lines = 20
 set send_charset = "utf-8"
 set fast_reply = yes
 unset reply_self
 set include = yes
 set sort = threads
 set sort_aux = last-date-received
 set indent_str="> "
 set attribution="On %d, %n wrote:"
 set fcc_attach
 set markers = no


# abook address book
 set query_command = "abook --mutt-query '%s'"
 macro index,pager  a "<pipe-message>abook --add-email-quiet<return>" "Add this sender to Abook"
 bind editor        <Tab> complete-query

# shift+S moves mail to Junk
macro index,pager S "<save-message>+INBOX/Junk\n<enter>"
